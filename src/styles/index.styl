/*--------------------------------------------------------------
# Defaults
--------------------------------------------------------------*/
* {
  box-sizing: border-box
}

html, body {
  width 100%
  height: 100%
  background: white
  color: $colorText
  box-sizing: border-box
  font-size: 14px
  font-family: 'Roboto', sans-serif
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
}